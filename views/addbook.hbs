<div class="container">
    <a href="/books" class="btn btn-success top-float-button" title="Back to book search"><span class="fa fa-arrow-left"></span> Back to search</a>
    <h3>Enter the information for a new book below:</h3>
    <form action="/books/insertbook" method="post">
        <div class="form-group">
            <label class="sr-only" for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author" placeholder="Author" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" placeholder="Title" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="type">Type</label>
            <input class="form-control" type="text" id="type" name="type" placeholder="Type" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="sub_type">Sub Type</label>
            <input class="form-control" type="text" id="sub_type" name="sub_type" placeholder="Sub Type" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="location" placeholder="Location" />
        </div>
        
        <button type="submit" class="btn btn-primary">Add book</button>
    </form>

    {{#if resultMsg}}
    <div class="alert alert-success" role="alert">
        {{resultMsg}}
    </div>
    {{/if}}
</div>