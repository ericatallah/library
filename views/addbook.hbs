<div class="container">
    <a href="#" onclick="window.history.go(-1); return false;" class="btn btn-success top-float-button" title="Back to book search"><span class="fa fa-arrow-left"></span> Back to search</a>
    <h3>Enter the information for a new book below:</h3>
    <form action="/books/insertbook" method="post">
        <div class="form-group">
            <label class="sr-only" for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author" placeholder="Author" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" placeholder="Title" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="type">Type</label>
            <select id="type" name="type" class="form-control">
                {{#if types}}
                {{#each types}}
                <option value="{{id}}">{{type}}</option>
                {{/each}}
                {{/if}}
            </select>
        </div>

        <div class="form-group">
            <label class="sr-only" for="sub_type">Sub Type</label>
            <select id="sub_type" name="sub_type" class="form-control">
                {{#if sub_types}}
                {{#each sub_types}}
                <option value="{{id}}">{{sub_type}}</option>
                {{/each}}
                {{/if}}
            </select>
        </div>

        <div class="form-group">
            <label class="sr-only" for="language">Language</label>
            <select id="language" name="language" class="form-control">
                {{#if languages}}
                {{#each languages}}
                <option value="{{id}}">{{language}}</option>
                {{/each}}
                {{/if}}
            </select>
        </div>

        <div class="form-group">
            <label class="sr-only" for="location">Location</label>
            <select id="location" name="location" class="form-control">
                {{#if locations}}
                {{#each locations}}
                <option value="{{id}}">{{location}}</option>
                {{/each}}
                {{/if}}
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Add book</button>
    </form>

    {{#if resultMsg}}
    <div class="alert alert-success" role="alert">
        {{resultMsg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}

    {{#if errorMsg}}
    <div class="alert alert-danger" role="alert">
        {{errorMsg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
</div>